{
    "Conditions": {
        "2015 Theme": {
            "default": "no",
            "description": "Bluer but still old",
            "values": {
                "no": {
                    "TargetCss": {
                        "affects": [".*"],  "src": "2013steam/vars2013.css"
                    }
                },
                "yes": {
                    "TargetCss": {
                        "affects": [".*"], "src": "2015steam/vars2015.css"
                    }
                }
            }
        }
    },
    "Configuration": [
        {
            "Name": "2015 Theme",
            "ToolTip": "Bluer but still old",
            "Type": "CheckBox",
            "Value": false
        }
    ],
    "Patches": [
        {
            "MatchRegexString": "^Steam$",
            "TargetCss": "libraryroot.custom.css",
            "TargetJs": "libraryroot.custom.js"
        },
        {
            "MatchRegexString": ".*",
            "Statement": [
                {
                    "Equals": true,
                    "False": {
                        "TargetCss": "2013steam/vars2013.css"
                    },
                    "If": "2015 Theme",
                    "True": {
                        "TargetCss": "2015steam/vars2015.css"
                    }
                }
            ]
        }
    ],
    "Steam-WebKit": "webkit.css",
    "UseDefaultPatches": true,
    "author": "Ben0258",
    "description": "Fork of naii_'s Classic Steam Library theme, focusing on the early 2010 look of Steam (based on screenshots)",
    "funding": {
        "kofi": "naii_"
    },
    "github": {
        "owner": "ben0258",
        "repo_name": "Early-2010-Steam-Library"
    },
    "header_image": "https://raw.githubusercontent.com/ben0258/Early-2010-Steam-Library/refs/heads/main/preview.png",
    "name": "Early 2010 Steam Library",
    "source": "https://github.com/ben0258/Early-2010-Steam-Library/tree/main",
    "splash_image": "https://raw.githubusercontent.com/ben0258/Early-2010-Steam-Library/refs/heads/main/preview.png",
    "tags": [
        "Dark",
        "Classic"
    ],
    "version": "1.1"
}


